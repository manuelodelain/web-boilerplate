{% extends 'layouts/base.twig' %}

{% block base %}

<!DOCTYPE html>
<html class="no-js">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">

    {# favicon #}

    <title></title>

    <script>
      document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
    </script>

    {% include "inject/styles.twig" %}

    {# analytics #}
  </head>
  <body class="page-id-{{ route_id }}">

    {% include 'components/nav.twig' %}

    <main id="page-container">
      {% block content %}
      {% endblock %}
    </main>

    {# shared data #}
    <script>
      var app = {
        debug: {{ debug ? 'true' : 'false' }},
        rootUrl: '{{ root_url }}',
      };
    </script>

    {# app #}
    {% include "inject/scripts-modern.twig" ignore missing %}
    {% include "inject/scripts-legacy.twig" ignore missing %}
  </body>
</html>

{% endblock %}

